{
  "name": "frontend-performance-assessor",
  "version": "1.1.2",
  "description": "A comprehensive module for assessing frontend developer performance with support for different levels (Junior/Middle/Senior) and frameworks (Vue, React, Vanilla JS). Includes internationalization support for English, Russian, and Ukrainian.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/**/*"
  ],
  "scripts": {
    "build": "tsc && npm run copy-locales",
    "copy-locales": "xcopy src\\i18n\\locales\\*.json dist\\i18n\\locales\\ /Y /I",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "postpack": "echo 'Package created successfully!'"
  },
  "keywords": [
    "frontend",
    "performance",
    "assessment",
    "code-quality",
    "developer-evaluation",
    "vue",
    "react",
    "vanilla-js",
    "vite",
    "typescript",
    "cli",
    "code-analysis",
    "i18n",
    "internationalization",
    "junior",
    "middle",
    "senior",
    "developer-level"
  ],
  "author": {
    "name": "Alex Design",
    "email": "byalexdesign@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "i18next": "^23.11.5",
    "i18next-fs-backend": "^2.3.1"
  },
  "bin": {
    "frontend-assessor": "./dist/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pwplains9/Front-end-performance-assessment-module.git"
  },
  "bugs": {
    "url": "https://github.com/pwplains9/Front-end-performance-assessment-module/issues"
  },
  "homepage": "https://github.com/pwplains9/Front-end-performance-assessment-module#readme"
}
